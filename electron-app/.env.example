# ========================================
# PlayGuard Environment Configuration
# ========================================
#
# Copy this file to .env and fill in your values
# cp .env.example .env
#
# IMPORTANT: Never commit .env file to Git
#

# ========================================
# AI API Keys (Optional)
# ========================================
# Used for AI-powered features (test description generation, etc.)
# These are stored encrypted in the app's secure storage
# You can also configure them in Settings â†’ AI tab

# Anthropic Claude API Key
# Get yours from: https://console.anthropic.com/
ANTHROPIC_API_KEY=sk-ant-api03-...

# OpenAI API Key
# Get yours from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-...

# ========================================
# ADB Configuration (Optional)
# ========================================
# Path to ADB executable if not in system PATH
# ADB_PATH=/path/to/adb

# Default ADB port (default: 5037)
# ADB_PORT=5037

# ========================================
# Unity SDK Configuration (Optional)
# ========================================
# Default TCP port for Unity SDK communication
# UNITY_SDK_PORT=12345

# Connection timeout in milliseconds
# UNITY_SDK_TIMEOUT=5000

# ========================================
# Development Options
# ========================================
# Enable debug logging
# DEBUG=true

# Log level (debug, info, warn, error)
# LOG_LEVEL=info

# Enable React DevTools
# REACT_DEVTOOLS=true

# ========================================
# Build Configuration
# ========================================
# App version (auto-generated from package.json)
# APP_VERSION=0.1.0

# Build environment (development, production)
# NODE_ENV=development

# ========================================
# Storage Configuration (Optional)
# ========================================
# Custom data directory (default: AppData/Roaming/playguard)
# DATA_DIR=/custom/path/to/data

# Screenshot quality (1-100, default: 90)
# SCREENSHOT_QUALITY=90

# Maximum screenshot file size in MB (default: 5)
# MAX_SCREENSHOT_SIZE=5

# ========================================
# Test Execution Settings (Optional)
# ========================================
# Default test timeout in seconds (default: 120)
# DEFAULT_TEST_TIMEOUT=120

# Default step timeout in seconds (default: 30)
# DEFAULT_STEP_TIMEOUT=30

# Retry failed tests (default: true)
# RETRY_FAILED_TESTS=true

# Maximum test retries (default: 3)
# MAX_TEST_RETRIES=3

# ========================================
# Reporting Settings (Optional)
# ========================================
# Auto-export reports (default: false)
# AUTO_EXPORT_REPORTS=false

# Default export format (json, html, pdf)
# DEFAULT_EXPORT_FORMAT=json

# Export directory
# EXPORT_DIR=./reports

# ========================================
# Network Configuration (Optional)
# ========================================
# HTTP proxy
# HTTP_PROXY=http://proxy.example.com:8080

# HTTPS proxy
# HTTPS_PROXY=https://proxy.example.com:8080

# No proxy (comma-separated)
# NO_PROXY=localhost,127.0.0.1

# ========================================
# Analytics (Optional)
# ========================================
# Disable analytics
# DISABLE_ANALYTICS=true

# Custom analytics endpoint
# ANALYTICS_ENDPOINT=https://analytics.example.com

# ========================================
# Notes
# ========================================
#
# 1. Most of these settings can be configured via the UI (Settings tab)
# 2. Environment variables take precedence over UI settings
# 3. API keys are stored encrypted in secure-storage.json
# 4. Restart the app after changing environment variables
#
