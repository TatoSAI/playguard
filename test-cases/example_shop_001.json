{
  "id": "example_shop_001",
  "name": "Shop Purchase Flow",
  "description": "Complete shop purchase with virtual currency",
  "version": "1.0",
  "tags": [
    "shop",
    "purchase",
    "critical",
    "economy"
  ],
  "createdAt": "2026-02-05T10:00:00.000Z",
  "updatedAt": "2026-02-05T10:00:00.000Z",
  "steps": [
    {
      "id": "step_1",
      "type": "tap",
      "description": "Open shop from main menu",
      "target": {
        "method": "gameObject",
        "value": "Button_Shop",
        "fallback": {
          "x": 0.9,
          "y": 0.1
        }
      },
      "options": {
        "screenshot": true
      }
    },
    {
      "id": "step_2",
      "type": "wait",
      "description": "Wait for shop to load",
      "waitType": "duration",
      "value": 2.0
    },
    {
      "id": "step_3",
      "type": "tap",
      "description": "Select item to purchase",
      "target": {
        "method": "gameObject",
        "value": "ShopItem_Sword",
        "fallback": {
          "x": 0.5,
          "y": 0.4
        }
      }
    },
    {
      "id": "step_4",
      "type": "tap",
      "description": "Confirm purchase",
      "target": {
        "method": "gameObject",
        "value": "Button_ConfirmPurchase",
        "fallback": {
          "x": 0.6,
          "y": 0.8
        }
      },
      "options": {
        "screenshot": true
      }
    },
    {
      "id": "step_5",
      "type": "wait",
      "description": "Wait for purchase animation",
      "waitType": "duration",
      "value": 2.5
    },
    {
      "id": "step_6",
      "type": "assert",
      "description": "Verify purchase success popup",
      "assertType": "elementExists",
      "target": "Popup_PurchaseSuccess"
    },
    {
      "id": "step_7",
      "type": "tap",
      "description": "Close success popup",
      "target": {
        "method": "gameObject",
        "value": "Button_Close"
      }
    },
    {
      "id": "step_8",
      "type": "tap",
      "description": "Open inventory",
      "target": {
        "method": "gameObject",
        "value": "Button_Inventory"
      }
    },
    {
      "id": "step_9",
      "type": "assert",
      "description": "Verify item in inventory",
      "assertType": "elementExists",
      "target": "InventoryItem_Sword",
      "timeout": 3.0
    }
  ]
}
