{
  "id": "example_login_001",
  "name": "Login Flow Test",
  "description": "Verify user can log in with valid credentials and reach main menu",
  "version": "1.0",
  "tags": [
    "authentication",
    "smoke",
    "critical"
  ],
  "createdAt": "2026-02-05T10:00:00.000Z",
  "updatedAt": "2026-02-05T10:00:00.000Z",
  "variables": {
    "email": "test@example.com",
    "password": "pass123"
  },
  "steps": [
    {
      "id": "step_1",
      "type": "tap",
      "description": "Tap Login button on home screen",
      "target": {
        "method": "gameObject",
        "value": "Button_Login",
        "fallback": {
          "x": 0.5,
          "y": 0.7
        }
      },
      "options": {
        "waitBefore": 1.0,
        "waitAfter": 0.5,
        "screenshot": true
      }
    },
    {
      "id": "step_2",
      "type": "input",
      "description": "Enter email address",
      "target": {
        "method": "gameObject",
        "value": "InputField_Email"
      },
      "value": "{{email}}",
      "options": {
        "clearFirst": true
      }
    },
    {
      "id": "step_3",
      "type": "input",
      "description": "Enter password",
      "target": {
        "method": "gameObject",
        "value": "InputField_Password"
      },
      "value": "{{password}}"
    },
    {
      "id": "step_4",
      "type": "tap",
      "description": "Tap Submit button",
      "target": {
        "method": "gameObject",
        "value": "Button_Submit",
        "fallback": {
          "x": 0.5,
          "y": 0.8
        }
      },
      "options": {
        "screenshot": true
      }
    },
    {
      "id": "step_5",
      "type": "wait",
      "description": "Wait for loading animation",
      "waitType": "duration",
      "value": 3.0
    },
    {
      "id": "step_6",
      "type": "assert",
      "description": "Verify welcome panel exists",
      "assertType": "elementExists",
      "target": "Panel_Welcome",
      "timeout": 5.0,
      "failBehavior": "stop"
    },
    {
      "id": "step_7",
      "type": "screenshot",
      "description": "Capture final state",
      "name": "login_success",
      "fullscreen": true
    }
  ],
  "cleanup": [
    {
      "id": "cleanup_1",
      "type": "tap",
      "description": "Logout to clean state",
      "target": {
        "method": "gameObject",
        "value": "Button_Logout"
      }
    }
  ]
}
